{
    "classes":{
        "keywords":{
            "style":"bold fg:magenta",
            "words":[
		"end",
                "fn", "fn::static", "fn::inline",
		"match", "switch", "switch::static",
		"string", "string::static", "dict", "list",
		"set", "setref", "fallthrough",
		"fallthrough",
		"if", "ifmain", "then", "else",
		"check"
	    ]
        },
        "operations":{
            "style":"fg:yellow",
            "words":[
                "+", "-", "*", "/", "//", "**",
		"..", "..+",
		"==", ">=", "<=", "!=", ">", "<", "=>",
		"typeof", "len", "slice",
		"?dict", "?list", "?string", "?int", "?float", "?bytes", 
		"dict", "!",
		"nil?", "def?",
		"in", "or", "and", "not",
		"checks", "follows", "satisfies"
            ]
        },
        "functions":{
            "style":"bold fg:grey",
            "words":[
                "cmd", "exit", "exec", "sexec",
                "dump_vars", "dump_scope",
                "inc", "dec"
            ]
        },
        "comments":{
            "style":"bg:grey",
            "startswith":"#"
        },
        "directives":{
            "style":"underline",
            "startswith":"&"
        },
        "numbers":{
            "style":"fg:orange",
            "match":"-?\\d+(:?\\.\\d+)?"
        },
        "string":{
            "style":"fg:green",
	    "match": "\"(\\\\.|[^\"\\\\]+)+\""
        },
        "escape":{
            "style":"fg:purple"
        }
    }
}
