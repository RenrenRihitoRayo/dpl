{
    "classes":{
        "keywords":{
            "style":"bold fg:magenta",
            "words":[
                "skip", "stop", "in", "as", "not", "and", "or",
                "raise", "tc_register", "export", "set", "del",
                "match",
                "case",
                "fn",
                "module",
                "method",
                "for",
                "pub",
                "loop",
                "while",
                "if",
                "dict",
                "with",
                "default",
                "sched",
                "enum",
                "ifmain",
                "switch",
                "begin",
                "end",
                "return",
		"setref"
            ]
        },
        "functions":{
            "style":"bold fg:grey",
            "words":[
                "cmd", "exit", "exec", "sexec",
                "dlopen", "dlclose", "cget", "cdef", "dump_vars", "dump_scope", "fallthrough",
                "inc", "dec"
            ]
        },
        "comments":{
            "style":"bg:grey",
            "startswith":"#"
        },
        "directives":{
            "style":"underline",
            "startswith":"&"
        },
        "numbers":{
            "style":"fg:orange",
            "match":"-?\\d+(:?\\.\\d+)?"
        },
        "string":{
            "style":"fg:green"
        },
        "escape":{
            "style":"fg:purple"
        }
    }
}
