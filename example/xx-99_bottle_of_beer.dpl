&use {std/text_io.py}

set bottles = 99

while (:bottles > 1)
    io:println('${bottles} bottles of beer on the wall, ${bottles} bottles on the wall.')
    dec bottles
    io:println('Take one down and pass it around, ${bottles} bottles of beer on the wall.\n')
    sleep 0.2
end

io:println('1 bottle of beer on the wall, 1 bottle on the wall.')
io:println('Take one down and pass it around, no more bottles of beer left on the wall.')
