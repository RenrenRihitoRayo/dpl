&use {std/text_io.py}

--
  OOP has finally been fixed in DPL 2.0.0!
--

object Person
dict :Person
    declare name, age
end
# We support short hand constructors
make_cons :Person
method Person.greet()
    io:println('Hello, I am ${self.name}')
end

set human = [call :Person.new("Darren", 16)]
io:debug(:human)
human.greet()